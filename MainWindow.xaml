<Window x:Name="frmMain" x:Class="VintelerEricav2_Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VintelerEricav2_Lab2"
        mc:Ignorable="d"
        Title="Virtual Doughnuts Factory" Height="450" Width="800" ResizeMode="NoResize" Background="#FF9CC6F4" Loaded="frmMain_Loaded">
    <Grid MenuItem.Click="FilledItemsShow_Click" Margin="0,0,0,-40">
        <GroupBox x:Name="gbRaised" Header="Raised" Margin="101,73,503,239" FontWeight="Normal"/>
        <GroupBox x:Name="gbFilled" Header="Filled" Margin="396,62,154,226" FontWeight="Bold"/>
        <TextBox x:Name="txtGlazedRaised" Text="0" TextWrapping="Wrap" IsReadOnly="True" Margin="177,106,519,299"/>
        <TextBox x:Name="txtSugarRaised" Text="0" TextWrapping="Wrap" IsReadOnly="True" Margin="177,148,519,255"/>
        <Label x:Name="lblChocolateFilled" Content="Chocolate" Margin="410,122,250,282"/>
        <Label x:Name="lblLemonFilled" Content="Lemon" Margin="412,85,272,316" RenderTransformOrigin="0.5,0.5">
        </Label>
        <TextBox x:Name="txtLemonFilled" Text="0" TextWrapping="Wrap" IsReadOnly="True" Margin="520,93,176,317"/>
        <TextBox x:Name="txtChocolateFilled" Text="0" TextWrapping="Wrap" IsReadOnly="True" Margin="520,128,176,282"/>
        <Label x:Name="lblVanillaFilled" Content="Vanilla" Margin="410,166,300,243"/>
        <TextBox x:Name="txtVanillaFilled" Text="0" TextWrapping="Wrap" IsReadOnly="True" Margin="520,164,176,243"/>
        <GroupBox x:Name="gbSale" Header="Current Sale" Margin="34,228,40,10" FontWeight="Bold"/>
        <Label x:Name="lblGlazed" Content="Glazed" Margin="117,104,629,299"/>
        <Label x:Name="lblSugar" Content="Sugar" Margin="117,148,629,255"/>
        <Label x:Name="lblTitle" Content="Doughnuts - Bake &amp; Sale" Margin="208,19,300,372" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="lblQuantity" Content="Quantity" Margin="53,263,688,141"/>
        <TextBox x:Name="txtQuantity" Text="0" TextWrapping="Wrap" IsReadOnly="True" Margin="117,263,579,140"/>
        <Label x:Name="lblType" Content="Type" Margin="237,264,509,140"/>
        <ComboBox x:Name="cmbType" Width="120" Margin="282,261,398,139" SelectionChanged="cmbType_SelectionChanged"/>
        <Label x:Name="lblPrice" Content="Price" Margin="421,264,325,140"/>
        <TextBox x:Name="txtPrice" TextWrapping="Wrap" IsReadOnly="True" Margin="468,263,228,141"/>
        <ListBox x:Name="lstSale" Margin="53,312,228,64"/>
        <Label x:Name="lblTotal" Content="Total" Margin="400,380,340,24"/>
        <TextBox x:Name="txtTotal" Text="0" TextWrapping="Wrap" IsReadOnly="True" Margin="468,375,228,19"/>
        <Button x:Name="btnAddToSale" Content="Add To Sale" HorizontalAlignment="Left" Margin="609,260,0,0" VerticalAlignment="Top" Width="116" Height="25" Click="btnAdd_Click">
        </Button>
        <Button x:Name="btnRemoveItem" Content="Remove Item" HorizontalAlignment="Left" Margin="609,294,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.5,0.5" Height="26" Click=" btnRemoveItem_Click">
        </Button>
        <Button x:Name="btnCheckout" Content="Check Out" HorizontalAlignment="Left" Margin="609,374,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.5,0.5" Height="42" FontWeight="Bold" Click=" btnCheckOut_Click">
        </Button>
        <Menu x:Name="mnuMain" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="130">
            <MenuItem Header="File">
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Doughnuts">
                <MenuItem Header="Make">
                    <MenuItem Header="Raised">
                        <MenuItem x:Name="glazedMenuItem" Header="Glazed" IsCheckable="True"/>
                        <MenuItem x:Name="sugarMenuItem" Header="Sugar" IsCheckable="True"/>
                    </MenuItem>
                    <MenuItem Header="Filled" Click="FilledItems_Click">
                        <MenuItem x:Name="lemonFilledMenuItem" Header="Lemon" IsCheckable="True" />
                        <MenuItem x:Name="chocolateFilledMenuItem" Header="Chocolate" IsCheckable="True"/>
                        <MenuItem x:Name="vanillaFilledMenuItem" Header="Vanilla" IsCheckable="True"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Stop"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
